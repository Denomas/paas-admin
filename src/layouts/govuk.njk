{% from "govuk-frontend/components/header/macro.njk" import govukHeader %}
{% from "govuk-frontend/components/phase-banner/macro.njk" import govukPhaseBanner %}
{% from "govuk-frontend/components/footer/macro.njk" import govukFooter %}

{% extends "govuk-frontend/template.njk" %}

{% set htmlLang = "en" %}
{% set themeColor = "blue" %}
{% set bodyClasses = "govuk-body" %}

{% block pageTitle %}PaaS Administration Tool{% endblock %}

{% block headIcons %}
  {{ super() }}
{% endblock %}

{% block head %}
  <meta name="csrf-token" content="{{csrf}}" />

  <!--[if !IE 8]><!-->
    <link href="./govuk.screen.scss" media="screen" rel="stylesheet" />
    <link href="./govuk.print.scss" media="print" rel="stylesheet" type="text/css" />
  <!--<![endif]-->

  <!--[if IE 8]>
    <link href="./govuk.screen.ie8.scss" media="screen" rel="stylesheet" />
  <![endif]-->

  {# For older browsers to allow them to recognise HTML5 elements such as `<header>` #}
  <!--[if lt IE 9]>
    <script src="/html5-shiv/html5shiv.js"></script>
  <![endif]-->
{% endblock %}

{% block bodyStart %}
{% endblock %}

{% block header %}
  {{ govukHeader({
    homepageUrl: "/",
    containerClasses: "govuk-width-container",
    serviceName: "Platform as a Service",
    serviceUrl: "https://www.cloud.service.gov.uk/",
    navigation: [
      {
        href: "/",
        text: "My Organisations"
      },
      {
        href: "https://docs.cloud.service.gov.uk/",
        text: "Documentation"
      },
      {
        href: "mailto:gov-uk-paas-support@digital.cabinet-office.gov.uk",
        text: "Support"
      },
      {
        href: "/auth/logout",
        text: "Sign out"
      }
    ]
  }) }}
{% endblock %}

{% block main %}
  {{ super() }}
{% endblock %}

{% block beforeContent %}
  {{ govukPhaseBanner({
    tag: {
      text: 'alpha'
    },
    html: 'This is a new service â€“ your <a class="govuk-link" href="mailto:gov-uk-paas-support@digital.cabinet-office.gov.uk">feedback</a> will help us to improve it.'
  }) }}

  {% if organization %}
    {% include "../components/organizations/subnav/element.njk" %}
  {% endif %}
{% endblock %}

{% block content %}
  
{% endblock %}

{% block footer %}
  {{ govukFooter({
    meta: {
      items: [
        {
          href: "https://www.gov.uk/government/organisations/government-digital-service",
          text: "Built by the Government Digital Service"
        },
        {
          href: "https://www.cloud.service.gov.uk/cookies",
          text: "Cookies"
        }
      ]
    }
  }) }}
{% endblock %}

{% block bodyEnd %}
  <script src="/assets/all.js"></script>
  <script src="/assets/init.js"></script>
{% endblock %}
