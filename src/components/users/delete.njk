{% extends "../../layouts/govuk.njk" %}
{% from "govuk-frontend/components/button/macro.njk" import govukButton %}
{% from "govuk-frontend/components/back-link/macro.njk" import govukBackLink %}

{% block pageTitle %}
  Confirm user deletion
{% endblock %}

{% block content %}
  {{ super() }}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-one-half">
    {{ govukBackLink({
      text: "See user view",
      href: linkTo('admin.organizations.users.edit', {organizationGUID: organization.metadata.guid, userGUID: user.metadata.guid})
    }) }}
  </div>

  <div class="govuk-grid-column-two-thirds">
    <form method="post" class="govuk-!-mt-r6 paas-remove-user">
      <h2 class="govuk-heading-l">Are you sure you'd like to remove the following user?</h2>

      <p class="govuk-heading-m">{{ user.entity.username }}</p>

      {{ govukButton({
        text: "Yes, remove from organisation"
      }) }}

      <a href="{{ linkTo('admin.organizations.users.edit', {organizationGUID: organization.metadata.guid, userGUID: user.metadata.guid}) }}" class="govuk-link">
        No, go back to user view
      </a>
    </form>
  </div>
</div>
{% endblock %}
