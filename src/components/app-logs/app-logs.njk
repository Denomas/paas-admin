{% extends "../applications/_tabs.njk" %}

{% block pageTitle %}
  {{ application.entity.name }} - Application Logs
{% endblock %}

{% block insideTabs %}
  <p class="govuk-body">
    The logs displayed below are live streamed from the application to your
    browser, and are not historical.
  </p>

  <div id="js-application-logs" class="application-logs">
  </div>

<style>
.application-logs {
  font-family: monospace;
  border: 2px solid black;
  width: 100%;
  height: 600px;
  overflow: scroll;
}
.log-line {
  display: table-row;
}
.log-gutter {
  display: table-cell;
  width: 15rem;
  background-color: #f3f2f1;
  border-right: 1px solid black;
  padding: 3px;
  border-bottom: 1px solid #b1b4b6;
}
.log-body {
  display: table-cell;
  padding: 3px 3px 3px 5px;
  border-bottom: 1px solid #b1b4b6;
}
</style>
<script src="/assets/logs.js"></script>
{% endblock %}
