{% extends "../layouts/govuk.njk" %}
{% from "@govuk-frontend/frontend/components/button/macro.njk" import govukButton %}
{% from "@govuk-frontend/frontend/components/back-link/macro.njk" import govukBackLink %}
{% from "@govuk-frontend/frontend/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "@govuk-frontend/frontend/components/table/macro.njk" import govukTable %}

{% block page_title %}
  Update a team member
{% endblock %}

{% block main %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    {{ govukBackLink({
      text: "See all team members",
      href: linkTo('admin.organizations.users', {organizationGUID: organization.metadata.guid})
   }) }}

    <h1 class="govuk-heading-xl">
      <span class="govuk-caption-xl">Team member</span>
      {{ user.entity.username }}
    </h1>

    {{ govukTable({
      rows: [
        [
          {
            text: "Email"
          },
          {
            text: user.entity.username
          }
        ]
      ]
    }) }}

    {% if errors and (errors).length > 0 %}
      {{ govukErrorSummary({
        titleText: "Error validating the update",
        descriptionText: "",
        errorList: errors | map({
          text: "message",
          href: "join('', ['#', field])"
        })
      }) }}
    {% endif %}

    <form method="post" class="govuk-!-mt-r6">
      {% include "./permissions.njk" %}

      {{ govukButton({
        text: "Save role changes"
      }) }}
    </form>

    <a href="{{ linkTo('admin.organizations.users.delete', {organizationGUID: organization.metadata.guid, userGUID: user.metadata.guid}) }}" class="govuk-link">
      Remove user
    </a>
  </div>
</div>
{% endblock %}
